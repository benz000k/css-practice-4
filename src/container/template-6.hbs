      <header class='header'>
          {{> logo}}

        <nav class='header_nav'>
          <div class="header_nav_right">{{>nav list=header}}</div>
        </nav>
      </header>

      <main class="main">
        {{#with info}}
          <div class="info">
            <h1 class="info_title">{{title}}</h1>
            <div class="info_description">{{description}}</div>
          </div>
        {{/with}}
        
        {{#with form}}
          <div class="form">
            <h2 class="form_title">{{title}}</h2>

            <div class="form_input_list">
              {{#each inputs}}
                <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="{{id}}">
              {{/each}}
            </div>

            <div class="form_checkbox">
              <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
              <div></div>
              <label for="{{checkbox.name}}">{{checkbox.label}}</label>
            </div>

            <button type="submit" class="form_button">{{button}}</button>
            <p class="form_info">{{info}}</p>
          </div>
        {{/with}}
      </main>

       <div class="list">
        {{#with updates}}
        <strong class="updates_title">{{title}}</strong>
          {{#each list}}
            <div class="list_card">
              <div class="color"></div>
              <div class="text">
                <strong class="list_nick">@{{nickname}}</strong>
                <div class="list_description">{{description}}</div>
              </div>
            </div>
          {{/each}}
          {{#with show_all}}
            <a href="{{url}}" class="show_text">{{text}}</a>
          {{/with}}
        {{/with}}
       </div>

      {{#with expirience}}
        <div class="expirience">
            <h2 class="expi_title">{{title}}</h2>
            <div class="expi_hot">
              <strong class="expi_hot_text">hot</strong>
            </div>
            <div class="expi_list_card">
              {{#each list}}
                <div class="expi_card">
                    <strong class="expi_name">{{name}}</strong>
                    <div class="expi_details">{{details}}</div>
                </div>
              {{/each}}
            </div>
        </div>
      {{/with}}

    <footer class="page_block">
      <footer class="footer">
          <div>
            {{> logo}}
            <br>
            <span class="footer_copyright">Copyright 2023-2024</span>
          </div>

          {{#each footer}}
            <div>
              <span class="footer_title">{{title}}</span>
              {{>nav list=links isVertical=true}}
            </div>
          {{/each}}
      </footer>
     </footer>